FROM alpine:3.14

RUN set -ex \
      && apk add --no-cache --virtual .lua-builddeps \
      ca-certificates \
      curl \
      gcc \
      libc-dev \
      make \
                && curl -fsSL -o /tmp/lua.tar.gz "https://luajit.org/download/LuaJIT-2.0.5.tar.gz" \
  && cd /tmp \
      && echo "874b1f8297c697821f561f9b73b57ffd419ed8f4278c82e05b48806d30c1e979 *lua.tar.gz" | sha256sum -c - \
    && mkdir /tmp/lua \
  && tar -xf /tmp/lua.tar.gz -C /tmp/lua --strip-components=1 \
  && cd /tmp/lua \
      && make \
    && make install \
      && cd / \
      && apk add --no-network --no-cache --virtual .lua-rundeps \
                    libgcc \
                && apk del --no-network .lua-builddeps \
    && rm -rf /tmp/lua /tmp/lua.tar.gz \
    && luajit -v

CMD ["luajit"]

LABEL org.opencontainers.image.source="https://github.com/GUI/lua-docker" \
  org.opencontainers.image.licenses="MIT"
