  && mkdir /tmp/lua \
  && tar -xf /tmp/lua.tar.gz -C /tmp/lua --strip-components=1 \
  && cd /tmp/lua \
      && make CFLAGS="-DLUAJIT_ENABLE_LUA52COMPAT" \
    && make install \
      && ln -s /usr/local/bin/luajit-2.1.0-beta3 /usr/local/bin/luajit \
