FROM debian:bookworm-20250908

RUN set -ex \
      && saved_apt_mark="$(apt-mark showmanual)" \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
      ca-certificates \
      curl \
      gcc \
      libc6-dev \
      make \
              libreadline-dev \
                        && curl -fsSL -o /tmp/lua.tar.gz "https://www.lua.org/ftp/lua-5.4.8.tar.gz" \
  && cd /tmp \
      && echo "4f18ddae154e793e46eeab727c59ef1c0c0c2b744e7b94219710d76f530629ae *lua.tar.gz" | sha256sum -c - \
    && mkdir /tmp/lua \
  && tar -xf /tmp/lua.tar.gz -C /tmp/lua --strip-components=1 \
  && cd /tmp/lua \
      && make linux \
    && make install \
      && cd / \
      && apt-mark auto '.*' > /dev/null \
    && if [ -n "$saved_apt_mark" ]; then \
      apt-mark manual $saved_apt_mark; \
    fi \
          && dpkg-query --show --showformat '${package}\n' | grep -P '^libreadline[t\d]+$' | xargs apt-mark manual \
                  && apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false \
    && rm -rf /var/lib/apt/lists/* /var/lib/dpkg/*-old /var/cache/* /var/log/* \
    && rm -rf /tmp/lua /tmp/lua.tar.gz \
    && lua -v

CMD ["lua"]

